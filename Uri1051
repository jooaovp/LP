#include <stdio.h>
#include <math.h>

int main(){
    
 float x;
 scanf("%f", &x);
 if (x <= 2000.0){
 printf("Isento\n");
 }
 else if (x <= 3000.0)
 printf("R$ %.2f\n", (x-2000.0)*0.08);
 else if (x <= 4500.0)
 printf("R$ %.2f\n", 1000.0*0.08+(x-3000.0)*0.18);
 else
 printf("R$ %.2f\n", 1000.0*0.08+1500.0*0.18+(x-4500.0)*0.28);
    return 0;
}
